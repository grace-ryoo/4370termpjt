<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Cooked Chronicles</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
    {{> fragments/navbar }}

    <!-- Past Cookbook Header -->
    <header class="cookbook-header">
        <h1 class="cookbook-title">Chronicles to Cook</h1>
    </header>

    <!-- Past Recipes Grid -->
    <section class="cookbook-section">
        <div class="cookbook-grid">
            {{#pastCookbook}}
                <div class="recipe-card">
                    <div class="recipe-details">
                        <h3>{{recipeName}}</h3>
                        <p>{{description}}</p>
                        <a href="/recipe/{{recipeId}}" class="btn-view">View Recipe</a>
                    </div>
                </div>
            {{/pastCookbook}}

            {{^pastCookbook}}
                <div class="no-recipes">
                    <p>No recipes bookmarked for the future yet. Explore and save some ideas!</p>
                    <a href="/" class="explore-link">Explore Recipes</a>
                </div>
            {{/pastCookbook}}
        </div>
    </section>

    <!-- Error Message -->
    {{#errorMessage}}
        <div class="error-message">
            <p>{{errorMessage}}</p>
        </div>
    {{/errorMessage}}


</body>
</html>

