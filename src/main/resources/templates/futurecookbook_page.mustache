<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Recipe Share</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="nav-bar">
        <div class="logo">Miso Hungry</div>
        <div class="nav-right">
            {{#username}}
                <span>Hello, {{username}}</span>
            {{/username}}
            {{^username}}
                <a href="/login" class="btn-login">Login</a>
            {{/username}}
        </div>
    </nav>

    <!-- Cookbook Header -->
    <header class="cookbook-header">
        <h1 class="cookbook-title">Chronicles to Cook</h1>
    </header>

    <!-- Saved Recipes Grid -->
    <section class="cookbook-section">
        <div class="cookbook-grid">
            {{#cookbook}}
                <div class="recipe-card">
                    <img src="{{imageUrl}}" alt="{{title}}" class="recipe-image" onerror="this.onerror=null;this.src='/static/img/placeholder.jpg';">
                    <div class="recipe-content">
                        <h2 class="recipe-title">{{title}}</h2>
                        <p class="recipe-author">By {{author}}</p>
                        <p class="recipe-description">{{description}}</p>
                        
                        <!-- Star Rating Section -->
                        <div class="recipe-rating">
                            {{#rating}}
                                <svg width="9" height="9" viewBox="0 0 9 9" fill="none" xmlns="http://www.w3.org/2000/svg" class="star-icon" preserveAspectRatio="none">
                                    <path d="M6.0293 2.6084L9 3.24707L6.97461 5.49707L7.28125 8.5L4.5 7.2832L1.71875 8.5L2.02539 5.49707L0 3.24707L2.9707 2.6084L4.5 0L6.0293 2.6084Z" fill="#FFCB45"></path>
                                </svg>
                            {{/rating}}
                        </div>

                        <!-- Cooked Status -->
                        <div class="recipe-footer">
                            <span class="recipe-category">{{category}}</span>
                            {{#isCooked}}
                                <span class="recipe-cooked">Cooked</span>
                            {{/isCooked}}
                        </div>
                    </div>
                </div>
            {{/cookbook}}
        </div>

        {{^cookbook}}
            <div class="no-recipes">
                <p>No recipes saved yet. Start exploring and bookmarking!</p>
                <a href="/explore" class="explore-link">Explore Recipes</a>
            </div>
        {{/cookbook}}
    </section>
</body>
</html>
