<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chronicles to Cook</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/main.js" defer></script>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="nav-bar">
        <div class="logo">Miso Hungry</div>
        <div class="nav-right">
            {{#username}}
                <span>Hello, {{username}}</span>
            {{/username}}
            {{^username}}
                <a href="/login" class="btn-login">Login</a>
            {{/username}}
        </div>
    </nav>

    <!-- Future Cookbook Header -->
    <header class="cookbook-header">
        <h1 class="cookbook-title">Chronicles to Cook</h1>
    </header>

    <!-- Future Recipes Grid -->
    <section class="cookbook-section">
        <div class="cookbook-grid">
            {{#futureCookbook}}
                <div class="recipe-card">
                    <div class="recipe-details">
                        <div class="recipe-header">
                            <h3>{{recipeName}}</h3>
                            <div class="rating-stars">
                                <!-- Rating stars (add functionality with JS later) -->
                                <button class="star" data-rating="1">&#9733;</button>
                                <button class="star" data-rating="2">&#9733;</button>
                                <button class="star" data-rating="3">&#9733;</button>
                                <button class="star" data-rating="4">&#9733;</button>
                                <button class="star" data-rating="5">&#9733;</button>
                            </div>
                        </div>
                        <p>{{description}}</p>
                        
                        

                    </div>
                </div>
            {{/futureCookbook}}

            {{^futureCookbook}}
                <div class="no-recipes">
                    <p>No recipes bookmarked for the future yet. Explore and save some ideas!</p>
                    <a href="/" class="explore-link">Explore Recipes</a>
                </div>
            {{/futureCookbook}}
        </div>
    </section>


    <!-- Error Message -->
    {{#errorMessage}}
        <div class="error-message">
            <p>{{errorMessage}}</p>
        </div>
    {{/errorMessage}}
</body>
</html>
