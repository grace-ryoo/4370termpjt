<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chronicles to Cook</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="nav-bar">
        <div class="logo">Miso Hungry</div>
        <div class="nav-right">
            {{#username}}
                <span>Hello, {{username}}</span>
            {{/username}}
            {{^username}}
                <a href="/login" class="btn-login">Login</a>
            {{/username}}
        </div>
    </nav>

    <!-- Future Cookbook Header -->
    <header class="cookbook-header">
        <h1 class="cookbook-title">Chronicles to Cook</h1>
    </header>

    <!-- Future Recipes Grid -->
    <section class="cookbook-section">
        <div class="cookbook-grid">
            {{#futureCookbook}}
                <div class="recipe-card">
                    <div class="recipe-details">
                        <h3>{{recipeName}}</h3>
                        <p>{{description}}</p>
                        <a href="/recipe/{{recipeId}}" class="btn-view">View Recipe</a>
                    </div>
                </div>
            {{/futureCookbook}}

            {{^futureCookbook}}
                <div class="no-recipes">
                    <p>No recipes bookmarked for the future yet. Explore and save some ideas!</p>
                    <a href="/" class="explore-link">Explore Recipes</a>
                </div>
            {{/futureCookbook}}
        </div>
    </section>

    <!-- Error Message -->
    {{#errorMessage}}
        <div class="error-message">
            <p>{{errorMessage}}</p>
        </div>
    {{/errorMessage}}
</body>
</html>
