<!DOCTYPE html>
<html lang="en">
{{> fragments/header}}
<body>
    {{> fragments/navbar}}

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Hello, {{username}}</h1>
        </div>
        <div class="hero-image">
            <!-- Add your hero image here -->
        </div>
    </section>

    <!-- Recipe Categories -->
    <section class="recipe-category">
        <div class="section-header">
            <h2>Categories</h2>
        </div>
        <div class="category-icons">
            {{#categories}}
            <a href="/recipe/recipes?categoryId={{categoryId}}" class="category-item">
                <div class="category-icon">
                    <img src="{{categoryImageUrl}}" alt="{{categoryName}}">
                </div>
                <span>{{categoryName}}</span>
            </a>
            {{/categories}}
        </div>
    </section>

    <!-- Popular Recipes -->
    <section class="popular-recipes">
        <div class="section-header">
            <h2>Popular Recipes</h2>
        </div>
        <div class="recipe-grid">
            {{#recipes}}
                {{> fragments/recipe_card}}
            {{/recipes}}
        </div>
    </section>
</body>
</html>