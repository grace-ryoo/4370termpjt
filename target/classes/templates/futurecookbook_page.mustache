<!DOCTYPE html>
<html lang="en">
{{> fragments/header}}
<body>
    <!-- Navbar -->
    {{> fragments/navbar }}

    <!-- Future Cookbook Header -->
    <header class="cookbook-header">
        <h1>Chronicles to Cook</h1>
    </header>

    <!-- Future Recipes Grid -->
    <div class="cookbook-grid">
        <div class="recipe-grid">
            {{#recipes}}
                {{> fragments/recipe_card}}
            {{/recipes}}
        </div>

        {{^recipes}}
            <div class="no-recipes">
                <p>No recipes bookmarked for the future yet. Explore and save some recipes!</p>
                <a href="/" class="explore-link">Explore Recipes</a>
            </div>
        {{/recipes}}
    </div>



    <!-- Error Message -->
    {{#errorMessage}}
        <div class="error-message">
            <p>{{errorMessage}}</p>
        </div>
    {{/errorMessage}}
</body>
</html>
